<htm>

  <body>
    <table class="table-responsive">
      <table align="center" class="table table-bordered">
        <h2 align="center" style="background-color: #eaf0ff;">ODER LIST</h2>
        <tr>
          <th>ID</th>
          <th>CustName</th>
          <th>CustPhone</th>
          <th>DateTime</th>
          <th>Total</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
        <%  for (var item of orders) { %>
        <tr>
          <td>
            <a href="/admin/listorders?id=<%= item._id %>">
              <%= item._id %>
            </a>
          </td>
          <td><%= item.custName %></td>
          <td><%= item.custPhone %></td>
          <td><%= new Date(item.datetime).toLocaleString() %></td>
          <td><%= item.total %></td>
          <td><%= item.status %></td>
          <td>
            <a href="/admin/updatestatus?id=<%= item._id %>&status=APPROVE" onclick="return confirm('ARE YOU SURE ?')">APPROVE</a>
            ||
            <a href="/admin/updatestatus?id=<%= item._id %>&status=CANCEL" onclick="return confirm('ARE YOU SURE ?')">CANCEL</a>
          </td>
        </tr>
        <% } %>
      </table>

      <% if (order) { %>
      <table class="table-responsive">
        <table align="center" class="table table-bordered">
          <h2 align="center" style="background-color: #eaf0ff;">ITEM LIST OF ODER</h2>
          <tr>
            <th>ProductID</th>
            <th>ProductName</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
          </tr>
          <% for (var item of order.items) { %>
          <tr>
            <td><%= item.product._id %></td>
            <td><%= item.product.name %></td>
            <td><img src="data:image/jpg;base64,<%= item.product.image %>" width="70" height="70" /></td>
            <td><%= item.product.price %></td>
            <td><%= item.quantity %></td>
          </tr>
          <% } %>

        </table>
      </table>
      <% } %>
      <h2 align="center" style="background-color: #eaf0ff;">-</h2>

  </body>
</htm>