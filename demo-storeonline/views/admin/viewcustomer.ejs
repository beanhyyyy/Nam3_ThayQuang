<htm>

    <body>
        <table class="table-responsive" >
            <table align="center" class="table table-bordered" >
                <h2 align="center" style="background-color: #eaf0ff;">CUSTOMER LIST</h2>

                <tr>
                    <th>ID</th>
                    <th>UsernameOfCustomer</th>
                    <th>PasswordOfCustomer</th>
                    <th>DateTime</th>

                </tr>
                <%  for (var item of customers) { %>
                <tr>
                    <td>
                        <a href="/admin/customer?id=<%= item._id %>">
                            <%= item._id %>
                        </a>
                    </td>
                    <td><%= item.username %></td>
                    <td><%= item.password %></td>
                    <td><%= new Date(item.datetime).toLocaleString() %></td>
                </tr>
                <% } %>
                
            </table>
        </table>
        <h2 align="center" style="background-color: #eaf0ff;">-</h2>



    </body>
</htm>